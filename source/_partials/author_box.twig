{% set author = site.authors[handle] %}

<div class="blog-authors">

    <div class="blog-author">
        <img class="img-circle blog-author-avatar" src="{{ author.avatar }}" width="40" alt="">

        <h4 class="blog-author-name">
            <a href="/authors/{{ handle }}">{{ author.name }}</a>
        </h4>

        <div class="blog-author-links">
            {% if author.twitter %}<a href="{{ author.twitter }}" target="_blank"> <i class="fa fa-twitter"></i></a>{% endif %}
            {% if author.url %}<a href="{{ author.url }}" target="_blank"><i class="fa fa-globe"></i></a>{% endif %}
            {% if author.github %}<a href="{{ author.github }}" target="_blank"><i class="fa fa-github"></i></a>{% endif %}
        </div>

        <p class="blog-author-bio">{{ author.bio }}</p>
    </div>

