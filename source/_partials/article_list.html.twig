<table class="table blog-article-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Tags</th>
        </tr>
    </thead>

    <tbody>
        {% for post in posts %}
        <tr>
            <th scope="row">
                <a href="{{ site.url }}{{ post.url }}">{{ post.title }}</a>
            </th>
            <td>
                {{ post.date|date('Y.m.d') }}
            </td>
            <td>
                {% for tag in post.meta.tags %}
                    <a class="label label-default" href="{{ site.url }}/blog/tags/{{ tag|url_encode(true) }}">{{ tag }}</a>
                {% endfor %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

